<div class="showboxContainer">
  <div class="showbox">
    <div class="hostel_info_box">
      <div class="hostel_image">
        <%= image_tag "#{@hostel.img}", alt: "Imge of hostel", class: "card-img-top show_img" %>

      </div>
      <div class="hostel_desc">
        <h1 class="colorful title-2 showTitle"><%= @hostel.title.capitalize %></h1>

        <h2 class="mar3 light">Description</h2>
        <p><%= @hostel.desc.capitalize %></p>

        <div class="list_el">
          <p class="list_p"><strong> <i class="fa-solid fa-location-dot" style="color: #30a2ff;"></i> Address</strong>
          </p>
          <p> <%= @hostel.address.capitalize %></p>
        </div>
        <div class="list_el">
          <p class="list_p"><strong> <i class="fa-solid fa-city" style="color: #30a2ff;"></i> City </strong></p>
          <p><%= @hostel.city.capitalize %></p>
        </div>
        <div class="list_el">
          <p class="list_p"><strong><i class="fa-solid fa-landmark" style="color: #30a2ff;"></i> Landmark</strong></p>
          <p><%= @hostel.landmark.capitalize %></p>
        </div>
        <div class="list_el">
          <p class="list_p"><strong> <i class="fa-solid fa-signs-post" style="color: #30a2ff;"></i> Zipcode</strong></p>
          <p><%= @hostel.zipcode %></p>
        </div>

      </div>
    </div>
    <div class="genralbox">
      <div class="pricingbox">
        <h2 class="f">Get at only </h2>
        <h1 class="title">₹<%= @hostel.price %>/-</h1>
        <% if logged_in? %>

          <% if @hostel.user.eql?(current_user) %>
            <%= link_to edit_hostel_path(@hostel), class: "btn btn-outline-warning mx-2" do%> <i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i> Edit <% end %>

            <%= link_to  hostel_path(@hostel), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure to delete this hostel?" } do%><i class="fa-solid fa-trash" style="color: #ffffff;"></i> delete<% end %>
          <% else %>
            <%= link_to "tel:#{@hostel.user.phone}", class: "btn btn-outline-success mx-2" do %>
              <i class="fa-solid fa-phone" style="color: #ffffff;"></i> Call
            <% end %>
            <%= link_to "mailto:#{@hostel.user.email}", class: "btn btn-outline-success mx-2" do %>
              <i class="fa-solid fa-envelope " style="color: #ffffff;"></i> Mail
            <% end %>


          <% end %>


        <% else %>
          <p class="serach_title smallgrey">To see contact information</p>
          <%= link_to login_path, class: "btn" do %>
            <i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i>
            Login
          <% end %>
        <% end %>


      </div>
      <div class="userbox">
        <div class="userbox_content">


          <div class="user_avatar">
            <%= image_tag "male.png", class: "avatar" %>
          </div>
          <div class="user_info_show">
            <h1 class="title-2 colorful"><%= @hostel.user.name.capitalize %></h1>
            <span class="smallgrey">@<%= @hostel.user.username %></span>

            <span class="badge"><i class="fa-solid fa-hotel"></i> <b><%= @hostel.user.hostels.count %></b> Hostels</span>

            <% if logged_in? %>

              <%= link_to user_path(@hostel.user), class: "btn full_width" do %>
                View
              <% end %>
            <% else %>
              <p class="serach_title smallgrey">To see user information</p>
              <%= link_to login_path, class: "btn full_width " do %>
                <i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i>
                Login
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>