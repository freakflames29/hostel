<div class="d-flex justify-content-center">
  <div class="card mb-3" style="width: 45rem;">
    <!--  <img src="..." class="card-img-top" alt="...">-->
    <%= image_tag "#{@hostel.img}", alt: "Imge of hostel", class: "card-img-top custom_imgs" %>

    <div class="card-body">
      <h3 class="card-title"><%= @hostel.title %></h3>
      <p class="card-text"><%= @hostel.desc %></p>
      <p class="card-text">
        <small class="text-body-secondary">by @<%= link_to @hostel.user.username, user_path(@hostel.user) %></small></p>

      <ul class="list-group">
        <li class="list-group-item"><b>Address:</b> <%= @hostel.address %></li>
        <li class="list-group-item"><b>Landmark:</b> <%= @hostel.landmark %></li>
        <li class="list-group-item"><b>City:</b> <%= @hostel.city %></li>
        <li class="list-group-item"><b>Zipcode:</b> <%= @hostel.zipcode %></li>
        <li class="list-group-item"><b>Country:</b> <%= @hostel.country %></li>

        <div class="d-flex mt-3">
        <% if @hostel.user.eql?(current_user) %>
          <hr>
          <%= link_to "✍️ Edit this hostel info", edit_hostel_path(@hostel), class: "btn btn-outline-warning mx-2" %>
          <%= link_to "🗑️ Delete this hostel", hostel_path(@hostel), class: "btn btn-outline-danger" ,data:{turbo_method: :delete,turbo_confirm:"Are you sure to delete this hostel?"}%>
        <% else %>
        <% end %>
        <%= link_to "📞 Call ", "tel:#{@hostel.user.phone}", class: "btn btn-outline-success mx-2" %>
        <%= link_to "✉️ Email ", "mailto:#{@hostel.user.email}", class: "btn btn-outline-primary mx-2" %>
        </div>
      </ul>
    </div>
  </div>
</div>