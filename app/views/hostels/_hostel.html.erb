<% para.each do |hostel| %>

  <div class="card_container">
    <div class="img">
      <%= image_tag "#{hostel.img}", alt: "mess image", class: "card-img-top" %>
    </div>
    <div class="details">
      <p class="slowtext"><%= hostel.title.capitalize %></p>
      <h2> ‚Çπ <%= hostel.price %>/-</h2>
      <p class="slowtext"> <i class="fa-solid fa-location-dot" style="color: #30a2ff;"></i> <%= hostel.city.capitalize %></p>
    </div>
    <div class="feature">
      <p ><%= hostel.desc[0..100] %></p>
<!--      <p><i class="fa-solid fa-wifi" style="color: #30a2ff;"></i> Wifi</p>-->
<!--      <p><i class="fa-solid fa-bed" style="color: #30a2ff;"></i> Games</p>-->
<!--      <p><i class="fa-solid fa-bed" style="color: #30a2ff;"></i> Games</p>-->
      <!--      <p> <i class="fa-solid fa-bed" style="color: #30a2ff;"></i> Games</p>-->
    </div>
    <div class="user">
      <p class="slowtext">Uploader</p>
      <div class="user_info">
        <i class="fa-solid fa-user-tie" style="color: #30a2ff;"></i>
        <span>
          <%= link_to hostel.user.name.capitalize, user_path(hostel.user) %>
        </span>

      </div>
      <div class="cardbtn">
        <%= link_to hostel_path(hostel), class: "btn btn-primary" do%>
          <p>View</p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>





