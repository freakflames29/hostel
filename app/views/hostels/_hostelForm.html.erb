<% if model.errors.any? %>
  <% model.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_with model: model, class: "form-control" do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, required: true, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :desc, "Description", class: "form-label" %>
    <%= f.text_area :desc, row: 6, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :landmark, "Landmark", class: "form-label" %>
    <%= f.text_field :landmark, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :address, "Address", class: "form-label" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :zipcode, "Zipcode", class: "form-label" %>
    <%= f.text_field :zipcode, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :city, "City", class: "form-label" %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :country, "Country", class: "form-label" %>
    <%= f.text_field :country, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :img, "Enter Image URL", class: "form-label" %>
    <%= f.text_field :img, row: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit btn_val, class: "btn btn-primary h3" %>
  </div>

<% end %>