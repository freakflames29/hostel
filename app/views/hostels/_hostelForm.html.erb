<% if model.errors.any? %>
  <div class="error_box">
     <h4>You got some errors !</h4>
    <% model.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
<% end %>

<%= form_with model: model, class: "sign_login_form" do |f| %>

  <p class="flabel">
    <%= f.label :title, class: "form-label" %>

  </p>
  <%= f.text_field :title, required: true, class: "sign_log_field" %>


  <p class="flabel">

    <%= f.label :desc, "Description", class: "form-label" %>
  </p>

  <%= f.text_area :desc, row: 6, class: "sign_log_field" %>


  <p class="flabel"><%= f.label :landmark, "Landmark", class: "form-label" %></p>
  <%= f.text_field :landmark, class: "sign_log_field" %>


  <p class="flabel"><%= f.label :address, "Address", class: "form-label" %></p>

  <%= f.text_field :address, class: "sign_log_field" %>


  <p class="flabel"><%= f.label :zipcode, "Zipcode", class: "form-label" %></p>

  <%= f.text_field :zipcode, class: "sign_log_field" %>



  <p class="flabel"><%= f.label :city, "City", class: "form-label" %></p>

  <%= f.text_field :city, class: "sign_log_field" %>

  <p class="flabel"><%= f.label :price, "Price", class: "form-label" %></p>

  <%= f.text_field :price, class: "sign_log_field" %>



  <p class="flabel"> <%= f.label :country, "Country", class: "form-label" %></p>

  <%= f.text_field :country, class: "sign_log_field" %>



  <p class="flabel "><%= f.label :img, "Enter Image URL", class: "form-label" %></p>

  <%= f.text_field :img, row: 5, class: "sign_log_field mb-3" %>


  <div class="mt-3">
    <%= f.submit btn_val, class: "btn btn-primary h3" %>
  </div>

<% end %>