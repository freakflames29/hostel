<% if model.errors.any? %>
  <% model.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_with model: model, class: "form-control" do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, required: true, class: "form-control" %>
  </div>
  <div class="mb-3">

    <%= f.label :phone, class: "form-label" %>
    <%= f.number_field :phone, required: true, class: "form-control" %>
  </div>
  <div class="mb-3">

    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, required: true, class: "form-control" %>
  </div>
  <div class="mb-3">

    <%= f.label :password_confirmation, "Confirm password", class: "form-label" %>
    <%= f.password_field :password_confirmation, required: true, class: "form-control" %>
  </div>


  <div class="mb-3">
    <%= f.radio_button :owner, "0", required: true %>
    <%= f.label :owner, "I want to find hostels", class: "form-label" %>
    <%= f.radio_button :owner, "1" %>
    <%= f.label :owner, "I am a hostel owner", required: true, class: "form-label" %>
  </div>

  <div class="mb-3">
    <%= f.label :desc,"Description",class: "form-label" %>
    <%= f.text_area :desc,row:5,class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.submit btn_val, class: "btn btn-primary h3" %>
  </div>

<% end %>