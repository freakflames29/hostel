<div class="search_result" id="searchRes">
  <% if @result.eql?(1) %>
    <h1 class="title title-2"><%= pluralize(@found_hostel.length, " Hostel") %> Found !</h1>
  <% end %>

</div>

<div class="hostels_container">
  <div class="hostels_store">
    <% if @result.eql?(1) %>
<%#= @found_hostel.inspect %>
      <!--  <h1 class="h1 text-center mb-5">( <%#= pluralize(@found_hostel.length, " ) Hostel") %> Found !</h1>-->
      <%= render "hostels/hostel", para: @found_hostel %>
    <% elsif @result.eql?(0) %>
      <h1 class="title title-2 title-red">No hostel found</h1>
    <% end %>
  </div>
</div>


<div class="serach_title title title-2">
  <h1 >Search More</h1>
</div>

<div class="search_form" id="search_bar">
  <%= form_for :search, url: search_path, id: "searchForm", class: "search", method: :get do |f| %>
    <%#= f.label :opt, "Select Parameter", class: "form-label" %>
    <%= select_tag :opt, options_for_select([["By City", "CIT"], ["By Title", "TIT"]]), class: "form-select mb-3" %>



    <%= f.text_field :search_q, class: "form-control", required: true, placeholder: "Enter here..." %>
    <%#= f.submit ('<i class="fa-solid fa-magnifying-glass" style="color: #30a2ff;"></i>').html_safe, class: "search-btn" %>

    <button type="submit" class="search-btn" id="searchBtn">
      <i class="fa-solid fa-magnifying-glass" style="color: #30a2ff;"></i>
    </button>

  <% end %>
</div>
</div>